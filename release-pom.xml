<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.tower.soafw</groupId>
  <artifactId>tower</artifactId>
  <version>1.1</version>
  <packaging>pom</packaging>
  <name>tower</name>
  <licenses>
    <license>
      <name>The Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <name>朱拱平</name>
      <email>arch_level@126.com</email>
      <organization>Sonatype</organization>
      <organizationUrl>http://www.sonatype.com</organizationUrl>
    </developer>
  </developers>
  <modules>
    <module>tower-util</module>
    <module>tower-log</module>
    <module>tower-config</module>
    <module>tower-cache</module>
    <module>tower-dao</module>
    <module>tower-concurrent</module>
    <module>tower-mq</module>
    <module>tower-rpc</module>
    <module>tower-domain</module>
    <module>tower-service</module>
    <module>tower-service-impl</module>
    <module>tower-job</module>
    <module>tower-web</module>
    <module>tower-tools</module>
    <module>tower-exception-manager</module>
    <module>tower-config-maven-plugin</module>
    <module>tower-test-maven-plugin</module>
    <module>tower-exception-gen-maven-plugin</module>
  </modules>
  <scm>
    <connection>scm:git:git@github.com:archlevel/tower.git</connection>
    <developerConnection>scm:git:git@github.com:archlevel/tower.git</developerConnection>
    <url>git@github.com:archlevel/tower.git</url>
  </scm>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/archlevel/tower/issues</url>
  </issueManagement>
  <distributionManagement>
    <repository>
      <id>nexus-releases</id>
      <url>http://maven.kjt.com:8081/nexus/content/repositories/releases</url>
    </repository>
    <snapshotRepository>
      <id>nexus-snapshots</id>
      <url>http://maven.kjt.com:8081/nexus/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
  <properties>
    <memcached.version>2.0.1</memcached.version>
    <spring.version>4.0.7.RELEASE</spring.version>
    <xstream.version>1.4.8</xstream.version>
    <maven-compiler-plugin.version>2.4.2</maven-compiler-plugin.version>
    <sqljdbc4.version>3.0</sqljdbc4.version>
    <curator-framework.version>2.4.0</curator-framework.version>
    <springsecurity.version>3.2.3.RELEASE</springsecurity.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <mybatis.version>3.2.8</mybatis.version>
    <oscache.version>2.4</oscache.version>
    <jedis.version>2.6.2</jedis.version>
    <junit.version>4.7</junit.version>
    <mysql.version>5.1.26</mysql.version>
    <commons-pool.version>1.5.4</commons-pool.version>
    <ognl.version>3.0.3</ognl.version>
    <validation-api.version>1.1.0.Final</validation-api.version>
    <curator-recipes.version>2.4.0</curator-recipes.version>
    <jackson-databind.version>2.4.2</jackson-databind.version>
    <mail.version>1.4.1</mail.version>
    <jsp-api.version>2.2</jsp-api.version>
    <poi.version>3.5-FINAL</poi.version>
    <logback.version>1.1.2</logback.version>
    <slf4j.version>1.7.5</slf4j.version>
    <commons-dbcp.version>1.4</commons-dbcp.version>
    <jsp-tag-api.version>1.2.1</jsp-tag-api.version>
    <commons-configuration.version>1.6</commons-configuration.version>
    <guava.version>18.0</guava.version>
    <quartz.version>2.2.1</quartz.version>
    <aspectj.version>1.8.4</aspectj.version>
    <hessian.version>4.0.7</hessian.version>
    <servlet-api.version>2.5</servlet-api.version>
    <json-lib.version>2.2.3</json-lib.version>
    <commons-lang.version>2.5</commons-lang.version>
    <unirest-java.version>1.3.26</unirest-java.version>
  </properties>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>nexus</id>
      <name>Nexus</name>
      <url>http://maven.kjt.com:8081/nexus/content/groups/public/</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>nexus</id>
      <name>Nexus</name>
      <url>http://maven.kjt.com:8081/nexus/content/groups/public/</url>
    </pluginRepository>
    <pluginRepository>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>Central Repository</name>
      <url>https://repo.maven.apache.org/maven2</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/Users/alexzhu/soa/tower/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <defaultGoal>package</defaultGoal>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>target</directory>
    <finalName>tower-1.1</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.3</version>
        <extensions>false</extensions>
        <configuration>
          <tagNameFormat>v@{project.version}</tagNameFormat>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>RELEASE</version>
        <extensions>false</extensions>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.4.2</version>
        <extensions>false</extensions>
        <configuration>
          <skipTests>true</skipTests>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>RELEASE</version>
        <extensions>false</extensions>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
